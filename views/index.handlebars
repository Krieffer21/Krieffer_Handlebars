
<h1>Eat da Burger!</h1>

<div class="burgers">
  <h2>Burgers to eat!</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
            {{> burgers/burger devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>
</div>

<div class="eaten">
  <h2 >Burgers that have been devoured!</h2>
    <ul>
      {{#each burgers}}
       {{#if devoured}}
<li>
	{{burger_name}}
</li>
       {{/if}}
      {{/each}}
    </ul>
</div>

<form class="create-form">
    <h2>Add a Burger</h2>
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  <button type="submit">Add Burger</button>
</form> 

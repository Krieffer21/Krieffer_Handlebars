<h1>Eat da Burger!</h1>

<section class="container">

  <div class="row">
    <div class="col-md-8 col-sm-12">
      <form class="create-form">
        <h2>Add a Burger</h2>
        <div>
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
          <button class="add" type="submit">Add Burger</button>
        </div>
      </form>
    </div>
  </div>

  <div class="container">
    <div class="row ">

        <div class="col  burgers">
          <h2>Burgers to eat!</h2>
          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger devoured=true}}
            {{/unless}}
            {{/each}}
          </ul>
        </div>
        <div class="col  eaten">
          <h2>Burgers that have been devoured!</h2>
          <ul>
            {{#each burgers}}
            {{#if devoured}}
            <ul>
              {{burger_name}}
            </ul>
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>

</section>